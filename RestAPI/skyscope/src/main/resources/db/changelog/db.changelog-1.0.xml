<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="manjiri">
        <!-- Create Table: user -->
        <createTable tableName="user">
            <!-- user_id as UUID with default value as UUID() -->
             <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- username -->
            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>

            <!-- email -->
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <!-- hashed password -->
            <column name="password_hash" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <!-- first name -->
            <column name="first_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <!-- last name -->
            <column name="last_name" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>

            <!-- createdAt timestamp -->
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <!-- modifiedAt timestamp -->
            <column name="modified_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2-add-role-column" author="manjiri">
    <addColumn tableName="user">
        <column name="role" type="VARCHAR(255)">
            <constraints nullable="false"/>
        </column>
    </addColumn>
    </changeSet>

    <changeSet id="creation_of_trend_table" author="manjiri">
        <!-- Create Table: Trend -->
        <createTable tableName="trend">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="topic" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="summary" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="progress" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modified_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint 
            baseTableName="trend" 
            baseColumnNames="user_id" 
            referencedTableName="user" 
            referencedColumnNames="id" 
            constraintName="fk_trend_user"/>
    </changeSet>

</databaseChangeLog>
